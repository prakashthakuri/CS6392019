<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout


    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <TextView
        android:id="@+id/text_dollars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/us_dollars"
        android:textSize="15sp"
        android:padding="10dp"
        android:layout_margin="20dp"

         />

    <EditText
        android:id="@+id/dollars"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"

        android:padding="10dp"
        android:layout_margin="20dp"
        android:layout_toRightOf="@id/text_dollars"
        android:layout_toEndOf="@id/text_dollars" />

    <Button

        android:id="@+id/convert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/convert"
        android:layout_below="@id/dollars"
        android:padding="10dp"
        android:onClick="convertCurrency"/>

    <TextView
        android:id="@+id/francs_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/comorian_francs"
        android:layout_below="@id/convert"
        android:padding="10dp"
        android:layout_margin="20dp"
      />
    <EditText
        android:id="@+id/comorian_francs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/convert"
        android:layout_toRightOf="@id/francs_text"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:layout_toEndOf="@id/francs_text" />

</RelativeLayout>